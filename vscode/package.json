{
  "name": "quiklog",
  "displayName": "QuikLog",
  "description": "Quickly insert log statements in (almost) any language.",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.50.0"
  },
  "publisher": "codeygallup",
  "repository": {
    "type": "git",
    "url": "https://github.com/codeygallup/QuikLog"
  },
  "categories": ["Other"],
  "activationEvents": [
    "onCommand:quiklog.insertLog",
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onLanguage:python",
    "onLanguage:java",
    "onLanguage:feature"
  ],
  "main": "./vscode/out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "quiklog.insertLog",
        "title": "Insert QuikLog"
      }
    ],
    "keybindings": [
      {
        "command": "quiklog.insertLog",
        "key": "ctrl+alt+l",
        "when": "editorTextFocus"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "quiklog.insertLog",
          "when": "editorTextFocus",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "mocha -r ts-node/register \"src/test/**/*.test.ts\"",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/vscode": "^1.50.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "eslint": "^9.36.0",
    "typescript": "^5.9.3",
    "mocha": "^10.2.0",
    "ts-node": "^10.9.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "vsce": "^2.12.0"
  }
}
